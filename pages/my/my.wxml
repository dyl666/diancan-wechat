<!--pages/my/my.wxml-->
<view class="container">

  <!-- 用户信息 -->
  <view class="user-container">
    <view>
      <image src='../../images/user.png' class="user-image"></image>
    </view>
    <view>
      <text class="nick">一只快乐的小鹿</text>
    </view>
  </view>
  <!-- 操作 -->
  <view class='go-center card-box'>
    <view class='card-info'>
      <view class='down-center' bindtap="cardGo">
        <i class="iconfont icon-youhuiquan" style="color:#FF9C35"></i>
        <label style='font-size:15px;margin-left:15px'>优惠券 <text class="card-num">（3张）</text> </label>
      </view>
      <view class='down-center'>
        <i class="iconfont icon-shouji" style="color:#B6D9A9"></i>
        <label style='font-size:15px;margin-left:15px'>1380000678</label>
      </view>
      <view class='down-center'>
        <i class="iconfont icon-shouji" style="color:#B6D9A9"></i>
        <label style='font-size:15px;margin-left:15px'>联系客服</label>
      </view>
    </view>
  </view>
</view>