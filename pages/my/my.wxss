/* pages/my/my.wxss */

.user-container {
  display: flex;
  align-items: center;
  width: 100%;
  height: 400rpx;
  background: #f25909;
  padding-bottom: 60rpx;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
}

.user-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.nick {
  font-size: 28rpx;
  color: #fff;
  margin-left: 20rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.card-info {
  box-shadow: 0.5px 0.5px 0.5px 0.5px rgba(255, 156, 53, 10);
  z-index: 1000;
  background: white;
  padding: 0 10px;
  margin-top: -50rpx;
  border-radius: 6rpx;
}

.card-box {
  width: 80%;
  margin: 0 auto;
}

.card-num {
  font-size: 24rpx;
  color: blue;
  padding: 6rpx 0;
  border-bottom: 1px solid blue;
}

.down-center {
  padding: 30rpx 0;
  border-bottom: 1px solid #e3e3e3;
}

.down-center:last-child {
  border-bottom: 0;
}
